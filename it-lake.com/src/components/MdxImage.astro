---

import {extractFileName} from '../scripts/extractFileName'

interface Props{
    src:string,
    alt:string,
    size:string,
}

let {src, alt = "", size = "default"} = Astro.props as Props;
alt = alt || extractFileName(src);

let width;
let height;
switch (size) {
  case "small":
    width = 540;
    height = 280;
    break;
  case "default":
    width = 650;
    height = 380;
    break;
  case "large":
    width = 910;
    height = 520;
    break;
  default:
    width = 650;
    height = 380;
}
---

<div style="text-align: center;">
    <img src={src} alt={alt} style={`max-width: ${width}px; max-height: ${height}px; object-fit: contain;`}/>
</div>