---
const navItems = ["Explore","Product", "About", , "Links"];
const userName = "kosaku hayashi";
import siteIcon from '../assets/image/site-icon-transparent.svg';
import ThemeIcon from './ThemeIcon.astro';
import Link from './Link.astro';
---

<!-- .header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
} -->

<header style="padding:1rem; border-bottom:2px solid #ddd;">
  <div class="container" style="display:flex; justify-content:space-between; align-items:center; ">
    <Link href="/" class="logo-link" unstyled>
      <div style="display: flex; align-items: center;">
        <img src={siteIcon.src} alt="Site Logo" style="width: 32px; height: 32px; margin-right: 0.5rem;" loading="lazy" />
        <span  style="font-size: 1.2rem; font-weight: bold;">{userName}</span>
      </div>
    </Link>

    <nav>
      <ul style="display: flex; gap: 1rem; list-style: none; margin: 0; padding: 0;">
        {
          navItems.map((item) => (
            <li>
              <a href={`/${item.toLowerCase()}`} style="text-decoration: none; color: inherit;">
                {item}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>

    <ThemeIcon></ThemeIcon>
  </div>
</header>