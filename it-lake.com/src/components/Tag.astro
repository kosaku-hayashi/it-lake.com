---
import { tagToSlug } from "../scripts/tags";
import Link from "./Link.astro";
import TagIcon from "./icon/TagIcon.astro";

interface Props{
    tagName:string
}

const {tagName} = Astro.props;

---

<Link href={`/tags/${tagToSlug(tagName)}`} class="no-underline">
    <TagIcon width="12" height="12"></TagIcon>
    <p style="display:inline; margin-left: -2px;">{tagName}</p>
</Link>